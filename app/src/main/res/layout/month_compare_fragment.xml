<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:padding="4dp"
            android:gravity="center">
            <TextView
                android:id="@+id/prev_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="June" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/vs" />
            <TextView
                android:id="@+id/actual_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                tools:text="July" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/most_used_devices_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.github.lzyzsd.circleprogress.ArcProgress
                        android:id="@+id/chart1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:arc_progress="100"
                        app:arc_text_size="15dp"
                        app:arc_text_color="@color/colorPrimaryDark"
                        app:arc_suffix_text="%"
                        app:arc_suffix_text_size="10dp"
                       app:arc_suffix_text_padding="-2dp"
                        app:arc_unfinished_color="@android:color/white"
                        app:arc_finished_color="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/power"
                        android:textAlignment="center"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <com.github.lzyzsd.circleprogress.ArcProgress
                        android:id="@+id/chart2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:arc_progress="100"
                        app:arc_text_size="30dp"
                        app:arc_text_color="@color/colorPrimaryDark"
                        app:arc_suffix_text="%"
                        app:arc_suffix_text_size="10dp"
                        app:arc_suffix_text_padding="7dp"
                        app:arc_unfinished_color="@android:color/white"
                        app:arc_finished_color="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/consumption"
                        android:textAlignment="center"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.github.lzyzsd.circleprogress.ArcProgress
                        android:id="@+id/chart3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:arc_progress="100"
                        app:arc_text_size="15dp"
                        app:arc_text_color="@color/colorPrimaryDark"
                        app:arc_suffix_text="%"
                        app:arc_suffix_text_padding="-2dp"
                        app:arc_suffix_text_size="10dp"
                        app:arc_unfinished_color="@android:color/white"
                        app:arc_finished_color="@color/colorPrimary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/savings"
                        android:textAlignment="center"
                        android:textSize="13dp"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginEnd="2dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:elevation="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/last_month"
                                android:textColor="@color/cardBackground"
                                android:textStyle="bold" />
                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="1dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/consumed" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:id="@+id/prev_consumed"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textSize="13sp"
                                    tools:text=" 45.1 W/h" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="1dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/limit" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:id="@+id/prev_limit"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textSize="13sp"
                                    tools:text="0.0 W/h" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="1dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/avg_power" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:id="@+id/prev_power"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textSize="13sp"
                                    tools:text="0.0 W" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/timeOn_last_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="1dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/time_on" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:id="@+id/prev_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textSize="13sp"
                                    tools:text="24:00 H" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="1dp"
                                    android:gravity="center"
                                    android:text="@string/cost" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:id="@+id/prev_cost"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textSize="13sp"
                                    tools:text="$0.0" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginStart="2dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:elevation="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/this_month"
                                android:textColor="@color/cardBackground"
                                android:textStyle="bold" />
                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/consumed" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="1dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:id="@+id/actual_consumed"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textSize="13sp"
                                    tools:text=" 45.1 W/h" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/limit" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="1dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:id="@+id/actual_limit"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textSize="13sp"
                                    tools:text="0.0 W/h" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/avg_power" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="1dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:id="@+id/actual_power"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textSize="13sp"
                                    tools:text="0.0 W" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/timeOn_this_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/time_on" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="1dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:id="@+id/actual_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textSize="13sp"
                                    tools:text="24:00 H" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/cost" />
                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="5dp"
                                android:layout_marginEnd="1dp"
                                android:layout_marginStart="2dp"
                                android:layout_weight="1"
                                android:elevation="5dp">

                                <TextView
                                    android:id="@+id/actual_cost"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:textSize="13sp"
                                    tools:text="$0.0" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>