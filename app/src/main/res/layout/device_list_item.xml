<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <RelativeLayout
        android:id="@+id/device_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="3dp"
        android:background="@color/cardBackground">

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_socket" />

        <Switch
            android:id="@+id/device_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_centerHorizontal="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:thumb="@drawable/ic_power_button" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/device_status"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="Licuadora"
            android:textSize="22sp" />

        <LinearLayout
            android:id="@+id/power_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/device_name"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Power: "
                android:textSize="15sp" />

            <TextView
                android:id="@+id/device_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 W"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/device_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cocina"
            android:visibility="gone"
            android:layout_below="@id/power_container"
            android:layout_centerHorizontal="true"
            android:textSize="15sp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
